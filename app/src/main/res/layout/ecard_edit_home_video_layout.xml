<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/flt_container"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:paddingLeft="@dimen/ecard_edit_margin_left_right"
             android:paddingRight="@dimen/ecard_edit_margin_left_right"
             android:paddingTop="@dimen/ecard_edit_margin_top_bottom"
             android:paddingBottom="@dimen/ecard_edit_margin_top_bottom">

    <com.dqr.www.complexrecyclerview.widget.ResizableImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/iv_player"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_bofang"/>
</FrameLayout>