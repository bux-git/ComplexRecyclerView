<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/llt_container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="@dimen/ecard_edit_margin_left_right"
              android:paddingRight="@dimen/ecard_edit_margin_left_right"
              android:paddingTop="@dimen/ecard_edit_margin_top_bottom"
             android:paddingBottom="@dimen/ecard_edit_margin_top_bottom">

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/ecard_edit_textview_lineSpacing"
        android:text="N/N"
        android:textSize="@dimen/ecard_edit_normal_size"/>

    <com.dqr.www.complexrecyclerview.widget.ResizableImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>

</LinearLayout>
