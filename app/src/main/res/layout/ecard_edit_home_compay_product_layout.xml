<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/llt_container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/ecard_edit_item_text_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/eCard_company_product_name_colorBg"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/ecard_edit_margin_left_right"
            android:paddingRight="@dimen/ecard_edit_margin_top_bottom"
            android:paddingTop="@dimen/ecard_edit_margin_top_bottom"
            android:paddingBottom="@dimen/ecard_edit_margin_top_bottom"
            android:textColor="@color/white"
            android:lineSpacingExtra="@dimen/ecard_edit_textview_lineSpacing"
            tools:text="地球人APP地球人APP地球人APP地球人APP"
            tools:textSize="@dimen/ecard_edit_title_size"
            tools:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/eCard_company_product_name_colorBg3"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/ecard_edit_margin_top_bottom"
            tools:text="2013-06-05"
            tools:textSize="@dimen/ecard_edit_title_size"
            tools:textStyle="bold"/>
        <include layout="@layout/ecard_edit_home_header_driver"
                 android:layout_width="1dp"
                 android:layout_height="match_parent"></include>
        <TextView
            android:id="@+id/tv_companyName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/eCard_company_product_name_colorBg3"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/ecard_edit_margin_top_bottom"
            android:paddingRight="@dimen/ecard_edit_margin_left_right"
            android:paddingTop="@dimen/ecard_edit_margin_top_bottom"
            android:paddingBottom="@dimen/ecard_edit_margin_top_bottom"
            android:lineSpacingExtra="@dimen/ecard_edit_textview_lineSpacing"
            tools:text="合作企业合作企业合作企业合作企业合作企业合作企业"
            tools:textSize="@dimen/ecard_edit_title_size"
            tools:textStyle="bold"/>
    </LinearLayout>
    <include layout="@layout/ecard_edit_home_header_driver"
             android:layout_width="match_parent"
             android:layout_height="0.5dp"></include>
</LinearLayout>